@using SaG.API.Areas.APIClient.Models
@Html.Partial("_Breadcrumb", new BackLink { BackForm = "methodlist/a", BackFormLabel = "A Series Commands", CurrentFormLabel = "Open Lock No Touch Key (A)" })
<div ng-controller="openLockNoTouchKeyA" ng-init="init(initControls)">
    <div class="page-header">
        <h3>Open Lock No Touch Key (A)</h3> 
        <p>Generates an operation code to open the lock using the inputs – ATM ID, user ID, date, hour, time block and lock status.  This routine will automatically fill in the touch key assigned to that user.</p>
    </div>  
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label for="txtAtmId">ATM ID</label>
                <input type="text" class="form-control" id="txtAtmId" placeholder="Enter ATM ID" ng-model="request.AtmId">
            </div>
            <div class="form-group">
                <label for="txt_user_id">User ID</label>
                <input type="text" class="form-control" id="txt_user_id" placeholder="Enter User ID" ng-model="request.UserId">
            </div> 
            <div class="form-group">
                <label for="txtDate">Date</label>
                <input type="text" class="form-control datepicker" id="txtDate" data-date-format="dd/mm/yyyy" placeholder="Select date" ng-model="request.Date">
            </div>      
            <div class="form-group">
                <label for="cboHour">Start Time</label>    
                <select class="form-control" id="cboHour" ng-model="request.Hour">
                    @for (var i = 0; i < 24; i++)
                    {
                        <option>@i</option>    
                    }
                </select>
            </div> 
            <div class="form-group">
                <label for="cboTimeBlock">Time Block</label>
                <select class="form-control" id="cboTimeBlock" ng-model="request.TimeBlock">
                    <option selected>4</option>
                    <option>8</option>
                    <option>12</option>
                    <option>24</option>
                </select>
            </div>
            <div class="form-group">
                <button id="btnExecute" class="btn btn-primary" ng-click="execute(beforeMethodExecute, methodExecuteSuccess, methodExecuteError)">Execute</button>    
                <div id="loader" style="display: none;">
                    <img src="/Content/images/loader.gif" />    
                </div>  
            </div> 
        </div>
        <div class="col-md-3 col-md-offset-1">
            <div class="form-group">
                <label for="txtResult">MESSAGE</label>
                <textarea class="form-control text-result" id="txtResult" ng-model="message" readonly></textarea>
            </div>
            <div class="form-group">
                <label for="txtOperationCode">OPERATION CODE</label>     
                <input type="text" class="form-control text-op-code" id="txtOperationCode" readonly ng-model="operationCode">
            </div>
        </div> 
    </div> 
    @Html.Partial("_RequestDebugForm")
</div>


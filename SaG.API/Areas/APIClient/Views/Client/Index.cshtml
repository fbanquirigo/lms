@{
    ViewBag.Title = "S&G Lock Management System - Dashboard";
}   
@model SaG.API.Areas.APIClient.Models.ClientDetail
    
@section styles
{
    @Styles.Render("~/Content/bootstrap-datepicker")   
}

@section scripts
{                      
    @Scripts.Render("~/bundles/bootstrap-datepicker")
    <script src="~/Scripts/angular.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-sanitize.js" type="text/javascript"></script>        
    <script src="~/Areas/APIClient/Scripts/components.js" type="text/javascript"></script>
    <script src="~/Areas/APIClient/Scripts/service-client.js" type="text/javascript"></script>  
    <script src="~/Areas/APIClient/Scripts/controllers.js" type="text/javascript"></script>
    <script src="~/Areas/APIClient/Scripts/app.js" type="text/javascript"></script>
}

@section footer
{
    @Html.Partial("_Footer")
}

@Html.Partial("_Header")

<div ng-controller="UIController" ng-init="init()">
    @Html.HiddenFor(x => x.AccessToken)
    @Html.HiddenFor(x => x.Debug)
    @Html.Partial("_NavBar")
    <div class="container" style="padding-top:220px;">
        <div class="container container-body" id="dashboard" compile="dashboardContent">
        </div>
        <div class="container container-body dashboard-loader" style="display: none;">
            <div class="dashboard-loader-text">....Loading....</div>
            <div class="dashboard-loader-image">
                <img src="/Content/images/dashboard-loader.gif" />
            </div>
          </div>
        </div>
     </div>
</div>                                              


